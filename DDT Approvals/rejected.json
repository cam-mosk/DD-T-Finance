{
  "type": "AdaptiveCard",
  "msteams": {
    "width": "Full"
  },
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "DD&T Approval Request @{outputs('Get_item')?['body/Title']} ID:@{outputs('Get_item')?['body/ID']} has been rejected",
      "wrap": true,
      "style": "heading"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "Rejector: @{outputs('Get_item')?['body/Approver/DisplayName']}",
              "wrap": true
            }
          ],
          "width": "stretch"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Rejection Comments: @{body('approvalParse')?['data']?['rejectcomment']}",
      "wrap": true
    },
    {
      "type": "Container",
      "style": "default",
      "height": "stretch"
    },
    {
      "type": "TextBlock",
      "text": "Would you like to revise this request?",
      "wrap": true,
      "horizontalAlignment": "center"
    },
    {
      "type": "ActionSet",
      "separator": false,
      "actions": [
        {
          "type": "Action.Submit",
          "title": "Revise Request",
          "style": "positive",
          "id": "reviseRequest"
        },
        {
          "type": "Action.Submit",
          "title": "Close and Cancel Requests",
          "style": "destructive",
          "id": "closeReject"
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4"
}
