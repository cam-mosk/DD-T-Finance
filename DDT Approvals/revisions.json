{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4",
  "msteams": {
    "width": "Full"
  },
  "body": [
    {
      "type": "TextBlock",
      "size": "Large",
      "weight": "Bolder",
      "text": "DD&T Approval {Title}"
    },
    {
      "type": "TextBlock",
      "spacing": "None",
      "text": "Created: @{outputs('Get_item')?['body/Created']}",
      "isSubtle": true,
      "wrap": true
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "Image",
              "style": "Person",
              "url": "@{outputs('Get_item')?['body/Author/Picture']}",
              "altText": "@{outputs('Get_item')?['body/Author/DisplayName']}",
              "size": "Small"
            }
          ],
          "width": "auto"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "Service Provider:@{outputs('Get_item')?['body/Author/DisplayName']}",
              "wrap": true
            }
          ],
          "width": "stretch"
        },

        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "Requester: @{outputs('Get_item')?['body/Payer/DisplayName']}",
              "wrap": true,
              "horizontalAlignment": "right"
            }
          ],
          "width": "stretch"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "Image",
              "style": "Person",
              "url": "@{outputs('Get_item')?['body/Payer/Picture']}",
              "altText": "@{outputs('Get_item')?['body/Payer/DisplayName']}",
              "size": "Small",
              "horizontalAlignment": "right"
            }
          ],
          "width": "auto"
        }
      ]
    },
    {
      "type": "TextBlock",
      "size": "Large",
      "weight": "Bolder",
      "text": "Request Revisions",
      "wrap": true,
      "spacing": "Default",
      "horizontalAlignment": "Center",
      "color": "accent"
    },
    {
      "type": "Input.Text",
      "label": "Title",
      "style": "text",
      "isRequired": true,
      "value": "@{outputs('Get_item')?['body/Title']}",
      "id": "revised_Title"
    },
    {
      "type": "Input.Text",
      "label": "Scope of Work",
      "style": "text",
      "isMultiline": true,
      "id": "revised_scope",
      "value": "@{outputs('Get_item')?['body/ScopeofWork']}"
    },
    {
      "type": "Input.Text",
      "label": "Assumptions",
      "style": "text",
      "isMultiline": true,
      "value": "@{outputs('Get_item')?['body/Assumptions']}",
      "id": "revised_Assumptions"
    },
    {
      "type": "Input.Text",
      "label": "Amount in: @{outputs('Get_item')?['body/Currency/Value']}",
      "id": "revised_Amount"
    },

    {
      "type": "Input.Date",
      "label": "Estimated Start Date",
      "id": "revised_StartDate",
      "value": "@{outputs('Get_item')?['body/ProjectStartDate']}"
    },
    {
      "type": "Input.Date",
      "label": "Estimated End Date",
      "id": "revised_EndDate",
      "value": "@{outputs('Get_item')?['body/ProjectEndDate']}"
    },
    {
      "type": "Input.Text",
      "label": "Comments",
      "style": "text",
      "isMultiline": true,
      "id": "revised_Comments"
    },
    {
      "type": "ActionSet",
      "separator": true,
      "actions": [
        {
          "type": "Action.Submit",
          "title": "Approve & Submit",
          "style": "positive",
          "id": "revised_Approve"
        }
      ]
    }
  ]
}
